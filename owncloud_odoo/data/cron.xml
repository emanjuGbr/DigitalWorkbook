<odoo>
    <data>

        <record id="cron_sync_with_owncloud" model="ir.cron">
            <field name="name">Synchronize attachments with Owncloud</field>
            <field name="model_id" ref="model_ir_attachment"/>
            <field name="code">model._cron_synchronize_attachments()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
        </record>

        <record id="cron_update_from_owncloud" model="ir.cron">
            <field name="name">Update attachments from Owncloud</field>
            <field name="model_id" ref="model_ir_attachment"/>
            <field name="code">model._cron_update_from_owncloud()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
        </record>

    </data>
</odoo>
