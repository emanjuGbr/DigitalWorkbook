        <!--Kick Of Meeting Email template -->
        <record id="email_template_crm_inhancment" model="mail.template">
            <field name="name">Kick Of Meeting</field>
            <field name="email_from">${(object.user_id.email and '%s &lt;%s&gt;' % (object.user_id.name, object.user_id.email) or '')|safe}</field>
            <field name="subject">${object.company_id.name} (Ref ${object.name or 'n/a' })</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.partner_id.lang or 'de_DE'}</field>
            <field name="body_html"><![CDATA[
            <p>
				Dear All,
			</p><br/>
            <p>
                Glad to kick-off a meeting with very committed and professional team members like you, hope we can collaborate together to achieve the goals, learn from each other and add a great value to the product and the organization.</p>]]></field>
        </record>
</odoo>
