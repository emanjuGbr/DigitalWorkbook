<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="syncronize_attachments_with_cloud" model="ir.cron">
            <field name="name">Synchronize attachments with cloud</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 0:00:00')" />
            <field name="model_id" ref="model_ir_attachment"/>
            <field name="state">code</field>
            <field name="code">model.cron_synchronize_attachments()</field>
        </record>

        <record id="cron_update_from_onedrive" model="ir.cron">
            <field name="name">Update attachments from OneDrive</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(hours=1)).strftime('%Y-%m-%d %H:%M:%S')" />
            <field name="model_id" ref="model_ir_attachment"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_from_onedrive()</field>
        </record>
    </data>

</odoo>
